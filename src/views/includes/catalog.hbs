<div class="card h-100 catalog-form el-light-panel">
    <div class="card-body row m-0 align-items-center">
        <div class="col-auto p-0 mr-3">
            {{> ../includes/image image=image alt=alt ratio="ratio-1by1" padding="p-1"}}
        </div>
        <div class="col p-0">
            <h4 class="card-title mb-0">{{title}}</h4>
        </div>
        <div class="col-12 p-0 mt-4 mt-md-0 ml-0 ml-md-3 col-md-auto text-center">
            <h6 class="card-subtitle mb-1 text-muted text-nowrap">{{fileSize}}</h6>
            <a href="{{downloadLink}}" class="btn el-btn fs-0 py-2 px-3"><i data-feather="download"></i></a>
        </div>
    </div>
</div>